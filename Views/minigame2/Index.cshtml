@{
    ViewData["Title"] = "マネーソーター";
}

<div class="container py-5">
    <div class="row justify-content-center mb-4">
        <div class="col-md-10 text-center">
            <h1 class="display-4 mb-3 text-warning fw-bold">マネーソーター</h1>
            <div class="mb-2">
                <span class="fs-2 fw-bold me-4">スコア: <span id="score">0</span></span>
                <span class="fs-2 fw-bold">タイマー: <span id="timer">60</span>秒</span>
            </div>
        </div>
    </div>
    <div class="row justify-content-center mb-5">
        <div class="col-md-6 text-center">
            <div id="coin-area" class="mb-4">
                <!-- コイン画像がここに表示される -->
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-10 d-flex justify-content-center flex-wrap gap-4">
            <div class="sorting-box bg-light border border-3 rounded-4 d-flex flex-column align-items-center justify-content-center" data-coin="1" style="width:200px;height:200px;">
                <svg width="120" height="120" viewBox="0 0 120 120">
                    <circle cx="60" cy="60" r="52" fill="#b0b0b0" stroke="#888" stroke-width="8"/>
                    <text x="50%" y="55%" text-anchor="middle" font-size="40" fill="#333" font-weight="bold" dominant-baseline="middle">1</text>
                </svg>
                <span class="fs-1 fw-bold mt-2">1円</span>
            </div>
            <div class="sorting-box bg-light border border-3 rounded-4 d-flex flex-column align-items-center justify-content-center" data-coin="5" style="width:200px;height:200px;">
                <svg width="120" height="120" viewBox="0 0 120 120">
                    <circle cx="60" cy="60" r="52" fill="#e0c15a" stroke="#888" stroke-width="8"/>
                    <text x="50%" y="55%" text-anchor="middle" font-size="40" fill="#7a5a00" font-weight="bold" dominant-baseline="middle">5</text>
                </svg>
                <span class="fs-1 fw-bold mt-2">5円</span>
            </div>
            <div class="sorting-box bg-light border border-3 rounded-4 d-flex flex-column align-items-center justify-content-center" data-coin="10" style="width:200px;height:200px;">
                <svg width="120" height="120" viewBox="0 0 120 120">
                    <circle cx="60" cy="60" r="52" fill="#b87333" stroke="#888" stroke-width="8"/>
                    <text x="50%" y="55%" text-anchor="middle" font-size="40" fill="#fff" font-weight="bold" dominant-baseline="middle">10</text>
                </svg>
                <span class="fs-1 fw-bold mt-2">10円</span>
            </div>
            <div class="sorting-box bg-light border border-3 rounded-4 d-flex flex-column align-items-center justify-content-center" data-coin="100" style="width:200px;height:200px;">
                <svg width="120" height="120" viewBox="0 0 120 120">
                    <circle cx="60" cy="60" r="52" fill="#a0c4d7" stroke="#888" stroke-width="8"/>
                    <text x="50%" y="55%" text-anchor="middle" font-size="40" fill="#222" font-weight="bold" dominant-baseline="middle">100</text>
                </svg>
                <span class="fs-1 fw-bold mt-2">100円</span>
            </div>
        </div>
    </div>
    <div class="row justify-content-center mt-5">
        <div class="col-md-10 text-center">
            <button class="btn btn-lg btn-primary" onclick="location.reload()">もう一度あそぶ</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/MiniGame2.js"></script>
}
