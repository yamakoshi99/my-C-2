<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - my_C_2</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/my_C_2.styles.css" asp-append-version="true" />
    @section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script src="~/js/Simulator.js"></script>
    }
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">my_C_2</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <button id="themeToggle" class="btn btn-outline-secondary ms-2" type="button">
                        <i class="bi bi-moon"></i> ダークモード
                    </button>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - my_C_2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // ダークモード切り替え
        const themeToggle = document.getElementById('themeToggle');
        const body = document.body;
        // ローカルストレージからテーマ取得
        if (localStorage.getItem('bsTheme') === 'dark') {
            body.setAttribute('data-bs-theme', 'dark');
            themeToggle.innerHTML = '<i class="bi bi-sun"></i> ライトモード';
        }
        themeToggle.addEventListener('click', function () {
            if (body.getAttribute('data-bs-theme') === 'dark') {
                body.removeAttribute('data-bs-theme');
                localStorage.setItem('bsTheme', 'light');
                themeToggle.innerHTML = '<i class="bi bi-moon"></i> ダークモード';
            } else {
                body.setAttribute('data-bs-theme', 'dark');
                localStorage.setItem('bsTheme', 'dark');
                themeToggle.innerHTML = '<i class="bi bi-sun"></i> ライトモード';
            }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/Simulator.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
